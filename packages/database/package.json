{
  "name": "@workify/database",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./dist/schema.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "db:setup": "pnpm run db:generate && pnpm run db:migrate && pnpm run db:seed",
    "db:generate": "pnpm drizzle-kit generate",
    "db:migrate": "pnpm drizzle-kit migrate",
    "db:push": "pnpm drizzle-kit push",
    "db:pull": "pnpm drizzle-kit pull",
    "db:seed": "tsx src/seeds/index.ts",
    "db:check": "pnpm drizzle-kit check",
    "db:up": "pnpm drizzle-kit up",
    "db:studio": "pnpm drizzle-kit studio"
  },
  "dependencies": {
    "@workify/shared": "workspace:*",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "@workify/eslint-config": "workspace:*",
    "@workify/typescript-config": "workspace:*",
    "@types/node": "^20.19.25",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
