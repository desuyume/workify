{
  "name": "workify",
  "private": true,
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma",
    "seed": "tsx packages/database/src/seed.ts"
  },
    "scripts": {
    "start": "dotenv -- turbo run start",
    
    "build": "pnpm run build:ci",
    "build:ci": "pnpm run build:packages && pnpm run build:apps",
    "build:local": "pnpm run build:packages && pnpm run db:setup && pnpm run build:apps",
    "build:packages": "dotenv -- pnpm --filter shared --filter ui --filter database run build:no-db",
    "build:apps": "dotenv -- pnpm --filter frontend --filter backend run build",
    "build:full": "pnpm run build:ci && pnpm run db:setup",
    
    "dev": "dotenv -- turbo run dev & pnpm run prisma:studio",
    "predev": "pnpm run db:setup",
    "dev:frontend": "dotenv -- pnpm --filter frontend run dev",
    "dev:backend": "dotenv -- pnpm --filter backend run dev",
    
    "db:generate": "dotenv -- pnpm --filter=database run db:generate",
    "db:setup": "dotenv -- pnpm --filter=database run db:setup",
    "db:migrate": "dotenv -- pnpm --filter=database run db:migrate",
    "db:migrate:dev": "dotenv -- pnpm --filter=database run db:migrate:dev",
    "db:seed": "dotenv -- pnpm --filter=database run db:seed",
    "db:prepare": "dotenv -- pnpm --filter=database run db:prepare",
    "prisma:studio": "dotenv -- pnpm --filter=database run studio",
    
    "format": "turbo run format",
    "lint": "turbo run lint",
    "clean": "turbo run clean"
  },
  "author": "desuyume <https://t.me/desuyume>",
  "devDependencies": {
    "@desuyume/prettier": "^1.0.0",
    "@workify/eslint-config": "workspace:*",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tsx": "^4.20.6",
    "turbo": "^1.13.4"
  },
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "dotenv-cli": "^7.4.4",
    "node-jose-tools": "^2.0.4"
  }
}
